<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- bootstarp -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body style="background-color: aquamarine;">
    <%- include('./partial/header.ejs') %>
    <section id="content">
        <div class="content-wrap min-vh-100 d-flex align-items-center">
            <div class="container clearfix">
                <div class="row justify-content-center gutter-50 col-mb-50">
                    <div class="w-100 text-center">
                        <h1 class="h1 fw-bold my-5">Book Store</h1>
                    </div>
                    <% data.map((val)=>{
                        let {bookName,authName,discription,image,_id}=val
                        %>
                        <div class="col-lg-6">
                            <div
                                class="row team team-list rounded-5 g-0 align-items-center shadow-sm border h-shadow h-translatey-sm all-ts rounded-4 overflow-hidden mb-4 bg-body p-3">
                                <div class="col-md-4 team-image col-sm-5 d-flex align-self-stretch">
                                    <img src="<%= image %>" alt="Book" width="160px">
                                </div>
                                <div class="col-md-8 col-sm-7 p-4">
                                    <div class="team-desc text-start">
                                        <div class="team-title pt-0 mb-3">
                                            <h4>
                                                <%= bookName %>
                                            </h4><span class="fst-normal text-success">
                                                <%= authName %>
                                            </span>
                                        </div>
                                        <p class="mb-3 text-body-secondary">
                                            <%= discription %>
                                        </p>
                                        <a href="/deleteData/<%= _id %>" class="me-3 text-danger"><i class="bi bi-trash3"></i></a>
                                        <a href="/editData/<%= _id %>"><i class="bi bi-pencil"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
    </section>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>